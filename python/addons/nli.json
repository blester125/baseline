{
  "version": 2,
  "modules": ["NLI"],
  "task": "classify",
  "basedir": "./snli",
  "batchsz": 50,
  "features": [{
    "name": "word",
    "vectorizer": {
      "type": "hash-oov",
	  "transform": "baseline.lowercase"
    },
      "embeddings": {
        "label": "glove-840B", "norm": true, "type": "intra-attn"
    }
  }],
  "preproc": {
    "mxlen": 100,
    "rev": false,
    "clean": true
  },
  "backend": "pytorch",
  "dataset": "snli",
  "loader": {
    "reader_type": "nli"
  },
  "unif": 0.25,
  "model": {
    "model_type": "nli",
    "hsz": 200,
    "layers": 2,
    "dropout": 0.2,
    "finetune": false
  },
  "train": {
    "epochs": 100,
    "optim": "adam",
    "eta": 3e-4,
    "model_zip": true,
    "patience": 40,
    "early_stopping_metric": "acc",
    "verbose": {
      "console": true,
      "file": "sst2-cm.csv"
    }
  }
}
